record Rec(x);

fn main() {
    var x = 10;
    
    x += 20;
    println(x); // 30

    x -= 10;
    println(x); // 20

    x *= 4;
    println(x); // 80

    x /= 2;
    println(x); // 40

    x %= 2;
    println(x); // 0;

    // ---
    println("---");

    var rec = Rec(10);

    rec.x += 20;
    println(rec.x); // 30

    rec.x -= 10;
    println(rec.x); // 20

    rec.x *= 4;
    println(rec.x); // 80

    rec.x /= 2;
    println(rec.x); // 40

    rec.x %= 2;
    println(rec.x); // 0;
}